{
  "name": "eventhub",
  "version": "1.0.0",
  "main": "index.js",

  "scripts": {
    "dev:server": "NODE_ENV=development nodemon server/src/server.js | pino-pretty",
    "dev:sass": "sass --load-path=node_modules client/src/scss/main.scss client/public/assets/css/main.css --watch",
    "dev:client": "lite-server --config=client/bs-config.json",
    "dev": "concurrently -n SASS,WEB,API -c cyan,magenta,blue \"npm run dev:sass\" \"npm run dev:client\" \"npm run dev:server\"",

    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.8",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "lite-server": "^2.6.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "sass": "^1.93.2"
  }
}
